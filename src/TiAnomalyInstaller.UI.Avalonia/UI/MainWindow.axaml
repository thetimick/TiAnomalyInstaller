<Window
    x:Class="TiAnomalyInstaller.UI.Avalonia.UI.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:TiAnomalyInstaller.UI.Avalonia.UI"
    Title="TiAnomalyInstaller (v.0.1a)"
    Width="1280"
    Height="720"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    x:DataType="ui:MainWindowViewModel"
    CanMaximize="False"
    CanResize="False"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaToDecorationsHint="True"
    PointerPressed="OnPointerPressed"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Styles>
        <Style Selector="Button.Main">
            <Setter Property="Width" Value="282" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="{StaticResource AmazFont}" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="Foreground" Value="#DCDCDC" />
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="*, 0.8*">
        <Image
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Source="../Resources/Assets/background.jpg"
            Stretch="UniformToFill" />

        <Border Grid.Column="0" Grid.ColumnSpan="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                    <GradientStop Offset="0.55" Color="#C0000000" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Grid
            Grid.Column="1"
            Margin="8"
            RowDefinitions="Auto, *, Auto">

            <TextBlock
                Grid.Row="0"
                Margin="0,4,0,4"
                VerticalAlignment="Center"
                FontFamily="{StaticResource AmazFont}"
                FontSize="96"
                Foreground="#DCDCDC"
                LineSpacing="-24"
                TextAlignment="Center">

                <Run Text="S.T.A.L.K.E.R.: Anomaly" />
                <LineBreak />
                <Run Text="{Binding Title}" />
            </TextBlock>

            <Grid
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Row="1">

                <StackPanel Orientation="Vertical" Spacing="8">
                    <Button
                        Classes="Main"
                        Command="{Binding TapOnPlayButtonCommand}"
                        Content="Играть" />

                    <Button
                        Classes="Main"
                        Command="{Binding TapOnInstallButtonCommand}"
                        Content="{Binding InstallButtonTitle}"
                        IsEnabled="{Binding ViewStateType, Converter={StaticResource ViewStateTypeToBoolConverter}}" />

                    <Separator />

                    <Button
                        Classes="Main"
                        Command="{Binding TapOnCheckupButtonCommand}"
                        Content="Проверить целостность файлов"
                        IsEnabled="{Binding ViewStateType, Converter={StaticResource ViewStateTypeToBoolConverter}}"
                        IsVisible="False" />

                    <Button
                        Classes="Main"
                        Command="{Binding TapOnCloseButtonCommand}"
                        Content="{Binding CancelButtonTitle}" />
                </StackPanel>
            </Grid>

            <StackPanel
                Grid.Row="2"
                Margin="16,16,16,24"
                Spacing="8">

                <TextBlock
                    FontFamily="Trebuchet MS"
                    FontSize="11"
                    FontWeight="Bold"
                    Text="{Binding ProgressTitle}" />

                <ProgressBar Foreground="#DCDCDC" Value="{Binding ProgressPercentage}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
