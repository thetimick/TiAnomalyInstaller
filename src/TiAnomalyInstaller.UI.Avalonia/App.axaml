    xmlns:converters="clr-namespace:TiAnomalyInstaller.UI.Avalonia.Converters"
    RequestedThemeVariant="Dark">

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="AmazFont">avares://TiAnomalyInstaller.UI.Avalonia/Resources/Fonts#AmazS.T.A.L.K.E.R.v.3.0</FontFamily>
            <converters:ViewStateTypeToBoolConverter x:Key="ViewStateTypeToBoolConverter" />
